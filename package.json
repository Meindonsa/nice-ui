{
  "name": "@meindonsa/nice-ui",
  "version": "0.0.2",
  "description": "",
  "main": "dist/css/nice-ui.css",
  "style": "dist/css/nice-ui.css",
  "files": [
    "src/nice-ui.scss",
    "src/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:css": "sass src/nice-ui.scss dist/css/nice-ui.css --style expanded",
    "copy:scss": "copyfiles -u 1 src/**/*.scss src/nice-ui.scss dist/scss/",
    "build": "npm run clean && npm run build:css && npm run copy:scss",
    "build:min": "sass src/index.scss dist/css/nice-ui.min.css --style compressed",
    "release:no-increment": "release-it --no-increment --ci",
    "release:patch": "release-it --increment=patch --ci",
    "release:minor": "release-it --increment=minor --ci",
    "release:major": "release-it --increment=major --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meindonsa/nice-ui.git"
  },
  "keywords": [
    "css",
    "design-system",
    "grid",
    "ui"
  ],
  "author": "Meindonsa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Meindonsa/nice-ui/issues"
  },
  "homepage": "https://github.com/Meindonsa/nice-ui#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "copyfiles": "^2.4.1",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2"
  }
}
